<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bacocco.speedtestmini.SpeedTestMiniActivity" >

    <AutoCompleteTextView
        android:id="@+id/txthost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:hint="Host" >

        <requestFocus />
    </AutoCompleteTextView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txthost"
        android:layout_alignBottom="@+id/txthost"
        android:layout_alignParentLeft="true"
        android:text="Host:" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/txthost"
        android:layout_marginTop="9dp"
        android:text="Port:" />

    <EditText
        android:id="@+id/txtport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txthost"
        android:layout_alignRight="@+id/txthost"
        android:layout_below="@+id/txthost"
        android:ems="10"
        android:hint="Port ( HTTP is 80)"
        android:inputType="number"
        android:text="80" />

    <Button
        android:id="@+id/btTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/txtport"
        android:text="Test DL and then UL" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btTest"
        android:layout_centerHorizontal="true"
        android:text="Speed: ---"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.bacocco.speedtestmini.SpeedGauge
        android:id="@+id/speedGauge1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btTest"
        android:layout_below="@+id/txtResult" />

    <Button
        android:id="@+id/btfdtest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btTest"
        android:layout_alignBottom="@+id/btTest"
        android:layout_toRightOf="@+id/btTest"
        android:text="Full dupl. test" />

    <com.bacocco.speedtestmini.SpeedGauge
        android:id="@+id/speedGauge2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/speedGauge1"
        android:layout_below="@+id/speedGauge1"
        android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speedGauge1"
        android:layout_centerHorizontal="true"
        android:text="Download" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speedGauge2"
        android:layout_centerHorizontal="true"
        android:text="Upload" />

</RelativeLayout>
